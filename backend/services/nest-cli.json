{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": [
      {
        "include": "../libs/shared/src/i18n/**/*",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "../libs/shared/src/i18n/**/*",
        "watchAssets": true,
        "outDir": ".build/src"
      }
    ]
  },
  "projects": {
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}
