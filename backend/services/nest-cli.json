{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "shared/src/i18n/**/*",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "shared/src/i18n/**/*",
        "watchAssets": true,
        "outDir": ".build/src"
      }
    ]
  }
}
